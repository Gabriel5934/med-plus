---
interface Props {
  isOpen: boolean;
}

const { isOpen } = Astro.props;
---

<div class={`sidebar ${isOpen ? "open" : ""}`}>
  <div class="overlay"></div>
  <div class="content">
    <div class="links">
      <a href="">Quem somos</a>
      <a href="">Produtos</a>
      <a href="">Fale conosco</a>
    </div>
  </div>
</div>

<style>
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition:
      visibility 0.3s,
      opacity 0.3s;
  }

  .sidebar.open {
    visibility: visible;
    opacity: 1;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .content {
    position: absolute;
    top: 0;
    right: 0;
    width: 80%;
    max-width: 300px;
    height: 100%;
    background-color: #0a3f69;
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;
    padding: 2rem;
  }

  .sidebar.open .content {
    transform: translateX(0);
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 4rem;
  }

  a {
    font-family: "Roboto", sans-serif;
    font-size: 1.5rem;
    font-weight: 500;
    color: white;
    text-decoration: none;
    text-transform: uppercase;
  }
</style>
